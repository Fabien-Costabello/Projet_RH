model Employe {
  id           Int         @id @default(autoincrement())
  firstName    String
  lastName     String
  mail         String      @unique
  age          Int
  Genre        String
  password     String
  avatar       String?     @default("/assets/img/default.png")
  entrepriseId Int
  entreprise   Entreprise  @relation(fields: [entrepriseId], references: [siret])
  ordinateurID Int?        @unique
  ordinateur   Ordinateur? @relation(fields: [ordinateurID], references: [id])
}

model Entreprise {
  raisonSociale String
  siret         Int          @id @unique
  firstName     String
  lastName      String
  email         String       @unique
  password      String
  employes      Employe[]
  ordinateurs   Ordinateur[]
}

model Event {
  id     Int       @id @default(autoincrement())
  title  String
  start  DateTime
  end    DateTime?
  allDay Boolean
}

model Ordinateur {
  id           Int        @id @default(autoincrement())
  macAdress    String     @unique
  Working      Boolean    @default(true)
  entrepriseId Int
  employeId    Int?       @unique
  entreprise   Entreprise @relation(fields: [entrepriseId], references: [siret])
  employe      Employe?   @relation
}

